<div class="card mb-3 border-0">
    @if (IsContentOnTop)
    {
        @ChildContent
    }
    <div class="card-body">
        @if (Icon is not null)
        {
            <div class="d-inline-flex align-items-center justify-content-center @(IconBackgroundColor) bg-gradient fs-4 rounded-3 mb-3" style="width: 3rem; height: 3rem;">
                <span class="material-symbols-outlined">
                    @Icon
                </span>
            </div>
        }
        <h3 class="card-title fs-3 mb-3">@Title</h3>
        <p class="card-subtitle mb-3 text-body-secondary">@Description</p>
    </div>
    @if (!IsContentOnTop)
    {
        @ChildContent
    }
</div>

@code {

    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public bool IsContentOnTop { get; set; }

    [Parameter] [EditorRequired] public string Title { get; set; } = null!;
    [Parameter] [EditorRequired] public string Description { get; set; } = null!;

    [Parameter] public string? Icon { get; set; }
    [Parameter] public string? IconBackgroundColor { get; set; } = "text-bg-primary";

}