@if (IsVertical)
{
    <div class="pt-5 text-center">
        <h1 class="display-4 fw-bold text-body-emphasis">@Title</h1>
        <div class="col-lg-6 mx-auto mb-3">
            <p class="lead mb-4">@Description</p>
            @CallToAction
        </div>
        @Media
    </div>
}
else
{
    <div class="row d-flex flex-lg-row-reverse align-items-center pt-5 g-5">
        <div class="col-10 col-sm-8 col-lg-6">
            @Media
        </div>
        <div class="col-lg-6">
            <h1 class="display-5 fw-bold text-body-emphasis lh-1 mb-3">@Title</h1>
            <p class="lead">@Description</p>
            @CallToAction
        </div>
    </div>
}

@code{
    [Parameter] public RenderFragment? Media { get; set; }
    [Parameter] public RenderFragment? CallToAction { get; set; }

    [Parameter] [EditorRequired] public string Title { get; set; } = null!;
    [Parameter] [EditorRequired] public string Description { get; set; } = null!;

    [Parameter] public bool IsVertical { get; set; }
}